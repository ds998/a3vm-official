<head>

  <!-- BASIC NEEDS
    ================================================== -->
  <meta charset="utf-8" />
  <title><%= content_for :title %>Atrium | Arhitektonski studio</title>
  <%= csrf_meta_tags %>
  <meta name="description" content="Studio arhitekture ATRIUM">
  <meta name="author" content="Darko Stefanovic">

  <!-- MOBILE META
    ================================================== -->
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements
    ================================================== -->
    <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
  <![endif]-->

    <!-- CSS
    ================================================== -->
    <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>

    <!-- GOOGLE FONT
    ================================================== -->
    <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Open+Sans:400italic,400,300,700&subset=latin,latin-ext" />
    <!-- <link rel='stylesheet' id='mission-font-css'  href='http://fonts.googleapis.com/css?family=Oswald&#038;ver=3.3.2' type='text/css' media='all' /> -->
    <link href='http://fonts.googleapis.com/css?family=Oswald&subset=latin,latin-ext' rel='stylesheet' type='text/css'>

  <!-- FABICON
  ================================================== -->
  <link rel="shortcut icon" href=<%= image_path 'favicon.ico' %>>

</head>
<body>
      <header id="header" class="navbar-fixed-top">
        <div class="container">
            <div class="row">
                <div class="span4">
                    <div  class="logo">
                        <h3><a href="/"><%= image_tag "logo.png" %></a> <small>arhitektonski studio</small> <a href="/">ATRIUM</a> </h3>
                    </div>
                </div>
                <div class="span8">
                    <div class="menu">
                        <ul class="main-menu">
                    <li><%= link_to t('.home'), welcome_path %></li>
                    <li><%= link_to t('.about'), about_index_path %></li>
                    <li><%= link_to "Portfolio", portfolio_index_path %>
                      <ul>
                        <li><%= link_to t('.3kolone'), portfolio_index_path %></li>
                        <li><%= link_to t('.4kolone'), portfolio4_index_path %></li>
                        <li><%= link_to t('.2kolone'), portfolio2_index_path %></li>
                        <!-- <li><a href="#">! TODO Portfolio Single Item</a></li> -->
                      </ul>
                    </li>
                    <li><%= link_to t('.contact'), contact_index_path %></li>
                    <li><% unless I18n.locale == :en %>
                        <%= link_to 'ENGLISH',controller: "welcome", action: "index", locale: "en" %>
                    <% else %>
                        <%= link_to 'MNE/RS', controller: "welcome", action: "index", locale: "rs" %>
                    <% end %></li>
                  </ul>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <div id="main">
      <div class="container">
        <div class="row">
            <%= yield %>
        </div>
      </div>
    </div>

    <footer id="footer">
            <div class="container">
                <div class="row">
                    <div class="span6">
                        <div class="widget">
                            <h3 class="widget-title"><%= t '.mi' %></h3>
                            <p><%= t '.mi-prica1' %></p>
                        </div>
                    </div>
                    <div class="span2">
                    </div>
                    <div class="span4">
                        <h3 class="widget-title"><%= t '.adresa1' %></h3>
                        <p class="address">Moskovska 127<br />Podgorica, MONTENEGRO</p>
                        <p class="phone">Phone: (+382) 67 24-84-84 <br />Fax: (+382) 20 510-086</p>
                        <p class="email"><a href="mailto:arh.atrium@t-com.me">arh.atrium@t-com.me</a></p>
                    </div>
                </div>
            </div>
        </footer>
        <div id="copyrights">
            <div class="container">
                <div class="row">
                    <div class="terms-condition span7">
                        <ul class="copyright">
                            <li>2014 © ATRIUM & Mirko Jovićević.  All rights reserved</li>
                        </ul>
                    </div>
                    <div class="span5">
                        <ul class="social-links pull-right">
                            <li><a href="https://www.facebook.com/a3vm.studio" target="_blank" rel="tooltip" data-placement="top" data-original-title="Facebook"><i class="icon-facebook"></i></a></li>
                            <li><a href="http://me.linkedin.com/pub/darko-stefanovic/82/220/a56" target="_blank" rel="tooltip" data-placement="top" data-original-title="LinkedIn"><i class="icon-linkedin"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

<!-- JAVASCRIPTS
================================================== -->
<!-- Placed at the end of the document so the pages load faster -->
<script src="https://maps.googleapis.com/maps/api/js?sensor=true"></script>
<%= javascript_include_tag "application" %>
</body>
</html>
